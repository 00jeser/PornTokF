<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PornTokF.Views.FindedFullScreenPage"
             Title="FindedFullScreenPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Button Text="←" FontSize="30" BackgroundColor="Transparent" Padding="20" HorizontalOptions="Start" VerticalOptions="Start"/>
        <CarouselView Loop="False" ItemTemplate="{StaticResource Key=Photo}" ItemsSource="{Binding ViewPhotos}" CurrentItem="{Binding Path=ViewPhoto}" IsScrollAnimated="False">
            <CarouselView.ItemsLayout>
                <LinearItemsLayout
                Orientation="Vertical" 
                SnapPointsAlignment="Start" 
                SnapPointsType="MandatorySingle" />
            </CarouselView.ItemsLayout>
        </CarouselView>
    </Grid>
</ContentPage>